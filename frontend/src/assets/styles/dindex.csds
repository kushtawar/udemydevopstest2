.custom-table thead {
  color: #c13c90 !important;
}
table {
  background-color: #282626;
  color: #f1eded !important;
}

:root {
  --main-background-light: #f5f5f5;
  --main-text-light: #333;
  --header-background-light: #fff;
  --header-text-light: #333;

  --main-background-dark: #222;
  --main-text-dark: #ddd;
  --header-background-dark: #333;
  --header-text-dark: #ddd;
}

body {
  background-color: var(--main-background-light);
  color: var(--main-text-light);
}

.header {
  background-color: var(--header-background-light);
  color: var(--header-text-light);
}
body.dark {
  background-color: #c13c90;
}
body.light {
  background-color: aquamarine;
}
